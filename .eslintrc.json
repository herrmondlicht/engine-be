{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": ["temp.js", "node_modules/", "**/*.test.js"],
  "rules": {
    "import/prefer-default-export": 0,
    "consistent-return": 0,
    "camelcase": 0,
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-shadow": 0,
    "no-underscore-dangle": 0
  }
}
